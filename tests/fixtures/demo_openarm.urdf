<?xml version="1.0"?>
<robot name="openarm_demo">
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://openarm_description/meshes/body/v10/visual/body_link0.stl"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1"/>
  </joint>
  <link name="link1">
    <visual>
      <geometry>
        <mesh filename="package://openarm_description/meshes/arm/v10/visual/link1.stl"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
      </material>
    </visual>
  </link>
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0.1 0.1" rpy="1.57 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1"/>
  </joint>
  <link name="link2">
    <visual>
      <geometry>
        <mesh filename="package://openarm_description/meshes/arm/v10/visual/link2.stl"/>
      </geometry>
    </visual>
  </link>
</robot>
