           <CheckIcon color="#fafafa" width="40" height="40" />
        </Button>
      </Container>

      <!-- Row 3 -->
      <Container id="row-3" class="hidden" flex-direction="row" justify-content="space-between" align-items="center" background-color="#27272a" padding="20" border-radius="12">
        <Text id="label-3" font-size="32" color="#fafafa" text="Camera 3" />
        <Button id="btn-3" width="60" height="60" border-radius="8" background-color="#3f3f46" align-items="center" justify-content="center" flex-shrink="0">
           <CheckIcon color="#fafafa" width="40" height="40" />
        </Button>
      </Container>

      <!-- Row 4 -->
      <Container id="row-4" class="hidden" flex-direction="row" justify-content="space-between" align-items="center" background-color="#27272a" padding="20" border-radius="12">
