<style>
  .hidden {
    display: none;
  }
  .active {
    background-color: #22c55e;
    color: #ffffff;
    border-color: #22c55e;
  }
</style>
<Panel width="800" backgroundColor="#18181b">
  <Container flex-direction="column" padding="40" gap="20">
    <Container flex-direction="column" gap="10">
      <Text font-size="48" font-weight="bold" color="#fafafa" text="Camera Settings" />
      <Text font-size="24" color="#a1a1aa" text="Toggle visibility of camera panels" />
    </Container>

    <Container flex-direction="column" width="100%" gap="20">
      <!-- Row 0 -->
      <Container id="row-0" class="hidden" flex-direction="row" justify-content="space-between" align-items="center" background-color="#27272a" padding="20" border-radius="12">
        <Text id="label-0" font-size="32" color="#fafafa" text="Camera 0" />
        <Button id="btn-0" width="60" height="60" border-radius="8" background-color="#3f3f46" align-items="center" justify-content="center" flex-shrink="0">
           <CheckIcon color="#fafafa" width="40" height="40" />
        </Button>
      </Container>

      <!-- Row 1 -->
      <Container id="row-1" class="hidden" flex-direction="row" justify-content="space-between" align-items="center" background-color="#27272a" padding="20" border-radius="12">
        <Text id="label-1" font-size="32" color="#fafafa" text="Camera 1" />
        <Button id="btn-1" width="60" height="60" border-radius="8" background-color="#3f3f46" align-items="center" justify-content="center" flex-shrink="0">
           <CheckIcon color="#fafafa" width="40" height="40" />
        </Button>
      </Container>

      <!-- Row 2 -->
