           <CheckIcon color="#fafafa" width="40" height="40" />
        </Button>
      </Container>

      <!-- Row 5 -->
      <Container id="row-5" class="hidden" flex-direction="row" justify-content="space-between" align-items="center" background-color="#27272a" padding="20" border-radius="12">
        <Text id="label-5" font-size="32" color="#fafafa" text="Camera 5" />
        <Button id="btn-5" width="60" height="60" border-radius="8" background-color="#3f3f46" align-items="center" justify-content="center" flex-shrink="0">
           <CheckIcon color="#fafafa" width="40" height="40" />
        </Button>
      </Container>
    </Container>

    <Button id="close-btn" width="100%" padding="30" margin-top="40" flex-direction="row" align-items="center" justify-content="center" background-color="#3f3f46" border-radius="16">
      <Text style="font-size: 32; font-weight: bold; color: #fafafa;" text="Close" />
    </Button>
  </Container>
</Panel>
