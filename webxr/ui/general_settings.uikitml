    color: #a1a1aa;
    text-align: left;
    margin-top: 0.3;
  }

  .input-group {
    margin-top: 1.5;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .input-label {
    font-size: 2;
    color: #a1a1aa;
    margin-bottom: 0.5;
  }

  .text-input {
    width: 100%;
    padding: 1;
    background-color: #27272a;
    color: #fafafa;
    border-radius: 1;
    border-width: 0.1;
    border-color: #3f3f46;
    font-size: 2;
  }

  .save-btn {
    width: 100%;
    padding: 1.2;
    margin-top: 2;
    background-color: #22c55e;
    color: #ffffff;
    border-radius: 1.5;
    border-width: 0.1;
    border-color: #22c55e;
    font-size: 2;
    font-weight: medium;
    text-align: center;
    cursor: pointer;
  }

  .close-btn {
    width: 100%;
    padding: 1.2;
    margin-top: 1;
    background-color: #27272a;
    color: #fafafa;
    border-radius: 1.5;
