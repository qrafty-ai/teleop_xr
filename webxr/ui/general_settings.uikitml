<div class="panel-container">
  <span class="heading">General Settings</span>
  <span class="sub-heading">Configure input and phone calibration</span>

  <div class="input-group">
    <span class="input-label">Input Mode</span>
    <input id="input-mode" class="text-input" value="controller" />
  </div>

  <div class="input-group">
    <span class="input-label">Natural Phone Position X</span>
    <input id="pos-x" class="text-input" value="0" />
  </div>

  <div class="input-group">
    <span class="input-label">Natural Phone Position Y</span>
    <input id="pos-y" class="text-input" value="0" />
  </div>

  <div class="input-group">
    <span class="input-label">Natural Phone Position Z</span>
    <input id="pos-z" class="text-input" value="0" />
  </div>

  <div class="input-group">
    <span class="input-label">Natural Phone Orientation X (deg)</span>
    <input id="ori-x" class="text-input" value="0" />
  </div>

  <div class="input-group">
    <span class="input-label">Natural Phone Orientation Y (deg)</span>
    <input id="ori-y" class="text-input" value="0" />
  </div>

  <div class="input-group">
    <span class="input-label">Natural Phone Orientation Z (deg)</span>
    <input id="ori-z" class="text-input" value="0" />
  </div>

  <button id="save-btn" class="save-btn">Save</button>
  <button id="close-btn" class="close-btn">Close</button>
